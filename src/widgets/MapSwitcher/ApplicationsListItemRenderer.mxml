<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true"
				width="100%"
				buttonMode="true"
				useHandCursor="true"
				toolTip="{data.label}">
	
	<s:layout>
		<s:HorizontalLayout verticalAlign="middle"
							paddingLeft="5"
							paddingRight="5"
							paddingTop="5"
							paddingBottom="5"
							/>
	</s:layout>
	<s:Image id="img" 
			 width="16"
			 height="16"
			 source="{data.imagen || 'assets/images/map-service.png'}"/>
	<s:Label text="{data.label}" maxWidth="{this.width - img.width - 5}" maxDisplayedLines="1" />
	
</s:ItemRenderer>
