            private function configureLocator():void
            {
				if(configXML.geocoding.locator.length() > 0)
				{
					for each(var xml:XML in configXML.geocoding.locator)
					{
						const url:String = xml[0] || DEFAULT_LOCATOR_URL;
						
						if (configXML.useproxy.length() > 0)
						{
							useProxy = configXML.useproxy == "true";
						}
						
						var locatorService:JSONTask = new JSONTask();
						locatorService.url = url;
						
						var locator:Locator = new Locator(url);
						locator.outSpatialReference= map.spatialReference;
						locator.token = TokenUtil.buscarToken(locator.url);
						locator.method = URLRequestMethod.POST;
						
						if (useProxy && configData.proxyUrl)
						{
							locatorService.proxyURL = configData.proxyUrl;
							locator.proxyURL = configData.proxyUrl;
						}
						
						var urlVars:URLVariables = new URLVariables();
						urlVars.f = "json";
						
						locatorServices.push(locator);
						singleAddressFieldNames.push("");
						locatorService.execute(urlVars, new AsyncResponder(locatorService_resultHandler, locatorService_faultHandler, locator));
					}
				}
